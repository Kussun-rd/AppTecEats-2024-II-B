<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF">

    <ImageView
        android:id="@+id/imageCampus"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo_tecsup" />

    <TextView
        android:id="@+id/textBienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido a"
        android:textColor="#00A6E8"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

    <!-- Logo de Tec Eat -->
    <TextView
        android:id="@+id/logoTecEat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tec Eat"
        android:textSize="48sp"
        android:textColor="#00A6E8"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inicia sesión en Tec Eats y disfruta de todas nuestras funcionalidades."
        android:textColor="#00A6E8"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center" />

    <!-- Botón de Iniciar Sesión con Google -->
    <Button
        android:id="@+id/btnLoginGoogle"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Iniciar Sesión"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#00D3A1"
        android:drawableStart="@drawable/google_logo"
        android:drawablePadding="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp" />

    <!-- Texto "¿No tienes cuenta?" -->
    <TextView
        android:id="@+id/textNoAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Eres dueño de un restaurante?"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />


    <!-- Texto clickeable "Regístrate aquí" -->
    <TextView
        android:id="@+id/textRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regístrate aquí"
        android:textColor="#00A6E8"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:onClick="onRegisterClick" /> <!-- Método llamado al hacer clic -->

</LinearLayout>

